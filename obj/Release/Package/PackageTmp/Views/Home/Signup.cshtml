

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Giriş Yap - FinalDrive</title>

    <!-- Font Icon -->
    <link href="~/fonts/material-design-iconic-font.min.css" rel="stylesheet" />

    <!-- Main css -->
    <link href="~/Content/form-style.css" rel="stylesheet" />
    <style>        h2 {
            font-family: 'Material-Design-Iconic-Font';
        }
        input {
            font-family: 'Material-Design-Iconic-Font';
        }
    </style>
</head>
<body>

    <div class="main">

        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Kayıt ol</h2>
                        <form method="POST" class="register-form" id="register-form" action="/Home/Signup">

                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="kAdi" id="email" placeholder="Mailiniz" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="sifre" id="pass" placeholder="Şifreniz" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="re_sifre" id="re_pass" placeholder="Şifreniz(Tekrar)" required="required" />
                            </div>
                            @{
                                if (ViewBag.hata != null)
                                {
                                    <i>@ViewBag.hata</i>
                                }
                            }
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Kayıt Ol" />
                            </div>
                        </form>
                       
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/Home/Login" class="signup-image-link">Zaten bir hesabım var.</a>
                    </div>
                </div>
            </div>
        </section>
   

    </div>

    <!-- JS -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>